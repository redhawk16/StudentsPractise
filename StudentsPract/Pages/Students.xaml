<UserControl x:Class="StudentsPract.Pages.Students"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentsPract.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        
        <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Column="1"/>
        <Grid Grid.Column="0">
            <DockPanel>
                <TextBlock Text="Список студентов" DockPanel.Dock="Top" Foreground="White" FontSize="28" Margin="0 0 0 20" VerticalAlignment="Center"/>
                <TreeView x:Name="treeView" DockPanel.Dock="Left" MinWidth="250">
                    <HierarchicalDataTemplate ItemsSource="{Binding Path=Groups}">
                        <TextBlock Text="{Binding Group_Name}"/>
                    </HierarchicalDataTemplate>
                </TreeView>
                <DataGrid x:Name="dataGrid" DockPanel.Dock="Left"/>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
