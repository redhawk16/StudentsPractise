<UserControl x:Class="StudentsPract.Pages.Documents"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentsPract.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Документы" FontSize="24" Margin="0 0 0 10"/>
            
            <Expander Header="Договоры">
                <Button x:Name="ContractsAdd" Style="{StaticResource MyButton}" Content="Сформировать договор" Click="ContractsAdd_Click"/>
            </Expander>
            <Expander Header="Приказы">
                <Button Style="{StaticResource MyButton}" Content="Сформировать приказ"/>
            </Expander>
            
        </StackPanel>
    </Grid>
</UserControl>
