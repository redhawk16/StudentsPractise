<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- xmlns:local="clr-namespace:StudentsPract.Themes"> -->

    <SolidColorBrush x:Key="Foreground" Color="Black"/>
    <SolidColorBrush x:Key="GrayColor" Color="Black"/>
    <SolidColorBrush x:Key="TitleColor" Color="#4d4d4d"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#9e9e9e"/>
    <SolidColorBrush x:Key="BorderBrushHover" Color="#FF0078D7"/>
    <SolidColorBrush x:Key="SidebarColor" Color="#FFECECEC"/>
    <SolidColorBrush x:Key="Item.MouseOver.Background" Color="#dedede"/>
    <SolidColorBrush x:Key="Item.MouseOver.BackgroundLight" Color="#ededed"/>

    <!-- Default color for Text -->
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="Black"/>


    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="#ffffff" />
        <Setter Property="FontSize" Value="16"/>
    </Style>
</ResourceDictionary>